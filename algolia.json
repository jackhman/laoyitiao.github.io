{
  "index_name": "docs_index",
  "start_urls": ["https://laoyitiao.github.io/posts/"],
  "rateLimit": 8,
  "maxDepth": 10,
  "selectors": {
    "lvl0": {
      "selector": ".VPContent .docIndex a",
      "default_value": "专栏"
    },
    "lvl1": {
      "selector": ".VPContent .content h1",
      "global": true
    },
    "lvl2": {
      "selector": ".VPContent .content h2"
    },
    "lvl3": {
      "selector": ".VPContent .content h3"
    },
    "lvl4": {
      "selector": ".VPContent .content h4"
    },
    "lvl5": {
      "selector": ".VPContent .content h5"
    },
    "content": {
      "selector": ".VPContent .content p,.VPContent .content li"
    },
    "lang": {
      "selector": "/html/@lang",
      "type": "xpath",
      "global": true,
      "default_value": "zh-CN"
    }
  },
  "custom_settings": {
    "attributesForFaceting": ["lang"]
  }
}